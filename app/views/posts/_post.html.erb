<p>
  <h2>
  <div class="float-right">33</div>
  <%= link_to post.title, post %></h2>
</p>

<p class="text-muted">
  <small><%= post.created_at.to_formatted_s(:long_ordinal) %></small>
  <small class="float-right"> <%= post.hearts.count %> Hearts</small>
</p>

<p>
  <% if post.kind == 'image' %>
    <%= image_tag post.content, style: "width: 100%"  %>
  <% else %>
    <%= simple_format post.content %>
  <% end %>
</p>