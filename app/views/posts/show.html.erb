<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' %> |
<%= link_to 'Back', posts_path, class: 'btn btn-success' %>
